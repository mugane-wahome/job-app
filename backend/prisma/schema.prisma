generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Users {
  id     String  @id @default(uuid())
  email     String   @unique
  username      String?
  password  String
  
}


// schema.prisma (job model)

model Jobs {
  id            String      @id @default(uuid())
  jobTitle      String
  companyName   String
  jobLocation   String
  jobEntryLevel String
  jobDescription String
}


model Appliedjobs {
  id            String      @id @default(uuid())
  jobTitle      String
  companyName   String
  jobLocation   String
  jobEntryLevel String
  jobDescription String
}

// schema.prisma (resumeupload  model)
model Resume {
  id           Int      @id @default(autoincrement())
  fileName     String
  fileType     String
}




model  resumes {
  id        Int      @id @default(autoincrement())
  filename  String
  mimeType  String
  size      Int
  url       String   // URL or path to the stored file
}




